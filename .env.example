# Configurazioni Ambiente
NODE_ENV=development
PORT=3001

# MongoDB
MONGODB_URI=mongodb://localhost:27017/assistente-biliato
# MONGODB_URI_PRODUCTION=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/assistente-biliato

# Salta connessione a MongoDB (per sviluppo senza database)
SKIP_MONGODB=false
MONGODB_OFFLINE=false

# Autenticazione
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=30d

# OpenAI API (per l'assistente AI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
API_ENABLED=true
